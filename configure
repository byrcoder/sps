#!/bin/bash

WORK_DIR=`pwd`
BUILD_DIR="${WORK_DIR}/build"
BUILD_SRT=${BUILD_DIR}/srt
BUILD_ST=${BUILD_DIR}/st
BUILD_GTEST=${BUILD_DIR}/gtest
BUILD_HTTP=${BUILD_DIR}/http-parser
BUILD_RTMPDUMP=${BUILD_DIR}/rtmpdump

mkdir -p ${BUILD_DIR}

. auto/opt.sh
. auto/depends.sh

echo "====== build sps ${BUILD_DIR}."

rm ${BUILD_DIR}/sps ${BUILD_DIR}/test_*

cd ${BUILD_DIR} && cmake -D ENABLE_UNITTESTS=ON -D SRT_ENABLED=${SRT_ENABLED} -D OPENSSL_ENABLED=${OPENSSL_ENABLED} -D OPENSSL_INCLUDE=${OPENSSL_INCLUDE} -D OPENSSL_LIB=${OPENSSL_LIB} .. && make -j8

